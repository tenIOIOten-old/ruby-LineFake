<% provide(:title, @user.name) %>
    <div class="row l-user">
        <aside class="col-md-4 user-info">
            <section>
                <h1>
                    <%= gravatar_for @user %>
                        <%= @user.name %>
                </h1>
            </section>
            <section class="user-stats">
                <%= render 'shared/stats' %>
            </section>
            <section class="user-follow">
                <%= render 'follow_form' if logged_in? %>
            </section>
        </aside>
        <div class="col-md-8 user-microposts">

            <% if @user.microposts.any? %>
                <h3 class="text-center">Microposts (
                    <%= @user.microposts.count %> )</h3>
                <ol class="microposts">
                    <%= render @microposts %>
                </ol>
                <%= will_paginate @microposts %>
                    <% end %>
        </div>
    </div>