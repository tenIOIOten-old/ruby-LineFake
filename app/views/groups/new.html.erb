<% provide(:title, 'Group Create') %>
<h1>New Group</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@group) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
      <%= f.label :id,"Select Member"%>
      <%= f.collection_select :id, current_user.friend, :id, :name,{}, {class: "form-control selectpicker",multiple: "true",data:{"live-search" => "true "}} %>
      <%= f.submit "Create New Group", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
