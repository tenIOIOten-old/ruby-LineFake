<% provide(:title, 'Group Create') %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
  <h1>New Group</h1>
    <%= form_for(@group) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control'%> 
    </div>
    <div class="form-group">
      <%= f.label :id,"Select Member"%>
      <%= f.collection_select :id, current_user.friend, :id, :name,{}, {class: "selectpicker form-control",multiple: "true",data:{"live-search" => "true "}} %>
    </div>
      <%= f.submit "Create New Group", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>